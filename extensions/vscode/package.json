{
  "name": "flt-edog-devmode",
  "displayName": "FLT EDOG DevMode",
  "description": "Automates MWC token management for FabricLiveTable EDOG development",
  "version": "1.0.0",
  "publisher": "fabric-livetable",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:workload-dev-mode.json",
    "workspaceContains:Service/Microsoft.LiveTable.Service"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flt-edog.start",
        "title": "FLT EDOG: Start DevMode"
      },
      {
        "command": "flt-edog.stop",
        "title": "FLT EDOG: Stop DevMode"
      },
      {
        "command": "flt-edog.revert",
        "title": "FLT EDOG: Revert Changes"
      },
      {
        "command": "flt-edog.refresh",
        "title": "FLT EDOG: Refresh Token Now"
      },
      {
        "command": "flt-edog.copyToken",
        "title": "FLT EDOG: Copy Token to Clipboard"
      },
      {
        "command": "flt-edog.status",
        "title": "FLT EDOG: Show Status"
      }
    ],
    "configuration": {
      "title": "FLT EDOG DevMode",
      "properties": {
        "flt-edog.username": {
          "type": "string",
          "default": "",
          "description": "Username/Email for EDOG login"
        },
        "flt-edog.workspaceId": {
          "type": "string",
          "default": "",
          "description": "Workspace ID (GUID)"
        },
        "flt-edog.artifactId": {
          "type": "string",
          "default": "",
          "description": "Artifact/Lakehouse ID (GUID)"
        },
        "flt-edog.capacityId": {
          "type": "string",
          "default": "",
          "description": "Capacity ID (GUID)"
        },
        "flt-edog.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Auto-detect IDs from workload-dev-mode.json"
        },
        "flt-edog.checkIntervalMins": {
          "type": "number",
          "default": 5,
          "description": "Token expiry check interval in minutes"
        },
        "flt-edog.refreshThresholdMins": {
          "type": "number",
          "default": 10,
          "description": "Refresh token when less than this many minutes remaining"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  }
}
